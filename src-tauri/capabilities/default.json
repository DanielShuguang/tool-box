{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": true
        },
        {
          "name": "explorer",
          "cmd": "explorer",
          "args": true
        },
        {
          "name": "open",
          "cmd": "open",
          "args": true
        },
        {
          "name": "xdg-open",
          "cmd": "xdg-open",
          "args": true
        }
      ]
    },
    "fs:default",
    "fs:write-all",
    "dialog:default",
    "dialog:allow-open",
    "notification:default",
    "core:tray:allow-new",
    "core:tray:allow-get-by-id",
    "core:tray:allow-remove-by-id",
    "core:tray:allow-set-icon",
    "core:tray:allow-set-menu",
    "core:tray:allow-set-tooltip",
    "core:tray:default"
  ]
}