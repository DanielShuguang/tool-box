{
  "$schema": "https://schema.tauri.app/config/2.3.0",
  "productName": "tool-box",
  "version": "0.1.1",
  "identifier": "com.toolbox.daniel",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Tool box",
        "minWidth": 1024,
        "minHeight": 768,
        "dragDropEnabled": false,
        "decorations": false,
        "transparent": false
      },
      {
        "label": "lyrics-window",
        "title": "桌面歌词",
        "width": 600,
        "height": 80,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "url": "lyrics.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "description": "Tool box",
      "args": [
        {
          "name": "hidden",
          "description": "Launch app in hidden mode"
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}